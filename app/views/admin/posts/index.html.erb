<div class="container">
	<div class="row">
		<div class="row">
			<div class="col-md-12 mx-auto">
				<%= link_to 'New Post', new_admin_post_path(), class: 'btn btn-primary' %>
			</div>
		</div>
		<div class="col-md-10 mx-auto">
			<table class="table table-striped table-bordered table-hover">
				<thead>
					<tr>
						<th>Title</th>
						<th>Context</th>
						<th>Edit</th>
						<th>Delete</th>
					</tr>
				</thead>
				<tbody>
					<% @posts.each do |post| %>
						<tr>
							<td><%= link_to post.title, admin_post_path(post) %></td>
							<td><%= post.context %></td>
							<td><%= link_to 'Edit', edit_admin_post_path(post) %></td>
							<td><%= button_to 'Destroy', [:admin, post], method: :delete, class: 'btn btn-danger' %> </td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>